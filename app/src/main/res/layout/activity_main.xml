<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="422dp"
            android:layout_height="315dp" android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <Button
            android:text="GENERATE FRACTAL"
            android:layout_width="409dp"
            android:layout_height="wrap_content" android:id="@+id/generateFractalBt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="237dp"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:text="4"
            android:ems="10"
            android:id="@+id/zoomTxt"
            app:layout_constraintStart_toEndOf="@+id/textView6" android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
    />
    <EditText
            android:layout_width="113dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:text="500"
            android:ems="10"
            android:id="@+id/iterationTxt"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            android:layout_marginTop="16dp" android:layout_marginStart="12dp"
    />
    <EditText
            android:layout_width="84dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text="0.0"
            android:ems="10"
            android:id="@+id/pointYTxt"
            app:layout_constraintTop_toTopOf="@+id/guideline5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pointXTxt"
            app:layout_constraintHorizontal_bias="0.013"/>
    <EditText
            android:layout_width="84dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text="-1.0"
            android:ems="10"
            android:id="@+id/pointXTxt"
            app:layout_constraintTop_toTopOf="@+id/guideline5" app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="20dp"/>
    <TextView
            android:text="Zoom"
            android:layout_width="62dp"
            android:layout_height="20dp" android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/guideline2" android:layout_marginTop="12dp"/>
    <TextView
            android:text="Ponto X:Y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/guideline5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Iterations"
            android:layout_width="67dp"
            android:layout_height="21dp" android:id="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/guideline3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="32dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="465dp" android:id="@+id/guideline2"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="510dp" android:id="@+id/guideline3"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="557dp" android:id="@+id/guideline4"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="404dp" android:id="@+id/guideline5"/>
    <EditText
            android:layout_width="422dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:text="192.168.1.76:10019"
            android:ems="10"
            android:id="@+id/serverAddressTxt"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="0.454"/>
    <TextView
            android:text="Server IP:PORT"
            android:layout_width="110dp"
            android:layout_height="27dp" android:id="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/guideline4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.501" android:textAlignment="center" android:editable="false"/>
    <Button
            android:text="RESET VALUES"
            android:layout_width="407dp"
            android:layout_height="48dp" android:id="@+id/resetButton"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/serverAddressTxt" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="118dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:text="100"
            android:ems="10"
            android:id="@+id/framesText"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"
            app:layout_constraintTop_toTopOf="@+id/guideline3" android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>