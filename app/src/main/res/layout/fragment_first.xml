<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirstFragment"
        android:id="@+id/container1">
    <Button
            android:text="GENERATE FRACTAL"
            android:layout_width="268dp"
            android:layout_height="49dp" android:id="@+id/generateFractalBt"
            tools:ignore="MissingConstraints"
            android:textSize="24sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.313"/>
    <EditText
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:text="4"
            android:ems="10"
            android:id="@+id/zoomTxt"
            app:layout_constraintStart_toEndOf="@+id/textView6" android:layout_marginStart="112dp"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            android:layout_marginTop="16dp" android:textSize="24sp"/>
    <EditText
            android:layout_width="121dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:text="500"
            android:ems="10"
            android:id="@+id/iterationTxt"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            android:layout_marginTop="12dp" android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.43"
            android:textSize="24sp"/>
    <EditText
            android:layout_width="106dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:text="0.0"
            android:ems="10"
            android:id="@+id/pointYTxt"
            app:layout_constraintTop_toTopOf="@+id/guideline5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pointXTxt"
            app:layout_constraintHorizontal_bias="0.6" android:layout_marginTop="8dp" android:textSize="24sp"/>
    <EditText
            android:layout_width="101dp"
            android:layout_height="56dp"
            android:inputType="textPersonName"
            android:text="-1.0"
            android:ems="10"
            android:id="@+id/pointXTxt"
            app:layout_constraintTop_toTopOf="@+id/guideline5" app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="20dp" android:layout_marginTop="8dp" android:textSize="24sp"/>
    <TextView
            android:text="Zoom"
            android:layout_width="91dp"
            android:layout_height="44dp" android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline2" android:layout_marginTop="16dp" android:textSize="30sp"/>
    <TextView
            android:text="Ponto X:Y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/guideline5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp" android:textSize="30sp"/>
    <TextView
            android:text="Iterations"
            android:layout_width="133dp"
            android:layout_height="41dp" android:id="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/guideline3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="12dp" android:textSize="30sp"/>
    <TextView
            android:text="Frames"
            android:layout_width="111dp"
            android:layout_height="37dp" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/guideline3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" android:layout_marginTop="88dp" android:textSize="30sp"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="154dp" android:id="@+id/guideline2"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="232dp" android:id="@+id/guideline3"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="392dp" android:id="@+id/guideline4"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="80dp" android:id="@+id/guideline5"/>
    <EditText
            android:layout_width="301dp"
            android:layout_height="49dp"
            android:inputType="textPersonName"
            android:text="192.168.1.76:10019"
            android:ems="10"
            android:id="@+id/serverAddressTxt"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Server IP:PORT"
            android:layout_width="163dp"
            android:layout_height="32dp" android:id="@+id/textView8"
            android:textAlignment="center" android:editable="false"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="@+id/guideline4"/>
    <Button
            android:text="RESET VALUES"
            android:layout_width="407dp"
            android:layout_height="48dp" android:id="@+id/resetButton"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/serverAddressTxt" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="117dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:text="100"
            android:ems="10"
            android:id="@+id/framesText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView" app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintTop_toBottomOf="@+id/iterationTxt" android:layout_marginTop="28dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline4" android:textSize="24sp"
            app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>